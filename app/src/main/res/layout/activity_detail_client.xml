<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.eni.lokacar.activities.DetailClientActivity">


    <TextView
        android:id="@+id/tv_client_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coordonn_es_du_client"
        android:textStyle="bold"
        android:textSize="27sp"
        />

    <TextView
        android:id="@+id/tv_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nom"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/tv_client_detail"
        />

    <TextView
        android:id="@+id/tv_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pr_nom"
        android:layout_below="@id/tv_nom"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num_ro_de_t_l_phone"
        android:layout_below="@id/tv_prenom"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_below="@id/tv_telephone"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adresse"
        android:layout_below="@id/tv_email"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_codepostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cp"
        android:layout_below="@id/tv_adresse"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/tv_ville"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ville"
        android:layout_below="@id/tv_codepostal"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/btn_supp_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/supprimerclient"
        style="@style/buttonstyle"
        />



</RelativeLayout>